<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
    <title>{% if header.title %} {{ header.title|e('html') }} | {%endif %} {{ site.title|e('html') }} </title>

    {% do assets.addCss('theme://css/custom.css') %}
    {% do assets.addCss('https://fonts.googleapis.com/css?family=Noto+Sans') %}

    {{ assets.css() }}
</head>
<body>

{% block header %}
    <header class="doc_header clearfix">
        <div class="standard_width">
            <div class="page_title">
                <a href="{{ base_url == '' ? '/' : base_url }}">
                    {{ config.site.title }}
                </a>
            </div>

            <input type="checkbox" id="open_menu" class="open_menu">
            <label for="open_menu" class="burger"><i class="fa fa-bars"></i>Open Menu</label>

            <div class="page_menu">
                <ul>
                    {% for page in pages.children.visible %}
                        <li>
                            <a href="{{ page.url }}">
                                {{ page.menu }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </header>
{% endblock %}

{% block body %}
    <section id="body">
        <div class="wrapper padding">
        {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <div class="footer">
        <p>Built with Grav CMS</p>
    </div>
{% endblock %}


</body>
</html>
